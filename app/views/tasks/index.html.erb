<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <%= check_box_tag 'task', task.title, task.completed %> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <br>
<% end %>

<p><%= link_to '+ Add a new task', tasks_new_path %></p>
